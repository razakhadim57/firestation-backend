# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
# For local MongoDB (make sure MongoDB is running)
MONGO_URI=mongodb://127.0.0.1:27017/feuerwehr-tv

# For MongoDB Atlas (replace with your actual connection string)
# MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/feuerwehr-tv?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_SECRET=your_refresh_token_secret_key_here
JWT_REFRESH_EXPIRE=7d

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_EMAIL=noreply@example.com
SMTP_PASSWORD=your_smtp_password
FROM_NAME=Feuerwehr-TV
FROM_EMAIL=noreply@example.com
